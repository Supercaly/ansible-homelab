Unattended-Upgrade::Automatic-Reboot "{{ 'true' if system_update_autoupdate_reboot else 'false' }}";
Unattended-Upgrade::Automatic-Reboot-Time "{{ system_update_autoupdate_reboot_time }}";

{% if system_update_autoupdate_mail_to %}
Unattended-Upgrade::Mail "{{ system_update_autoupdate_mail_to }}";
Unattended-Upgrade::MailOnlyOnError "true";
{% endif %}

Unattended-Upgrade::Origins-Pattern {
    // Debian security repositories
    "origin=Debian,codename=${distro_codename},label=Debian-Security";
    "origin=Debian,codename=${distro_codename}-security,label=Debian-Security";

    // Ubuntu security repository
    "origin=Ubuntu,archive=${distro_codename}-security";

    // Ubuntu ESM repositories
    "origin=${distro_id}ESMApps,archive=${distro_codename}-apps-security";
    "origin=${distro_id}ESM,archive=${distro_codename}-infra-security";

    // Custom repositories
{% for origin in system_update_autoupdate_additional_origins %}
    "{{ origin }}";
{% endfor %}
}

Unattended-Upgrade::Package-Blacklist{
{% for package in system_update_autoupdate_blacklist %}
    "{{package}}";
{% endfor %}
}
