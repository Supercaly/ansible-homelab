{{ ansible_managed | comment(decoration='# ') }}

services:
  portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer
    restart: unless-stopped
    ports:
      - "{{ proxy_portainer_port }}:9000"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - data:/data
    environment:
      TZ: "{{ docker_timezone }}"

volumes:
  data:
